package rhinestone.TUI;

import java.util.Scanner;

import rhinestone.Control.MainMenuController;

public class MainMenu {
	private MainMenuController controller;
	private Scanner scanner;

	public MainMenu(MainMenuController controller) {
		this.controller = controller;
        scanner = new Scanner(System.in);
	}

	public void startMenu() {
		boolean finished = false;
		while(!finished) {
			printMenu();
			int input = scanner.nextInt();
			switch(input) {
				case 1:
					controller.moveToCheckout();
					break;
				case 2:
					controller.moveToCRUDProducts();
					break;
				case 3:
					controller.moveToLeasing();
					break;
				case 4:
					controller.moveToStatistics();
					break;
				case 5:
					finished = true;
					break;
				default:
					System.err.println("MainMenu default switch");
					break;
			}
		}
	}

	private void printMenu() {
		System.out.println(" ----- MAIN MENU ----- ");
		System.out.println("\t(-1-) Checkout product");
		System.out.println("\t(-2-) CRUD products");
		System.out.println("\t(-3-) Leasing services");
		System.out.println("\t(-4-) Statistics");
		System.out.println("\t(-5-) Exit");
	}
}
