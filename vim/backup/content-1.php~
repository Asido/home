			<span class="helvetica-white">
			<?php
				$answer_tables = array();
				$query = "SHOW TABLES";
				$all_tables = $db->to_array($db->query($query));
				$all_table_count = count($all_tables);
				for ($i = 0; $i < $all_table_count; $i++) {
					// remove the last check for string "guests" in order to include guest users answered questions
					if (strpos($all_tables[$i][0], "answers") && strpos($all_tables[$i][0], "guests") === false)
						array_push($answer_tables, $all_tables[$i][0]);
				}

				$answer_table_count = count($answer_tables);
				$total_answers = 0;
				for ($i = 0; $i < $answer_table_count; $i++) {
					$query = "SELECT * FROM `".$answer_tables[$i]."`";
					$result = $db->query($query);
					$total_answers += count($db->to_array($result));
				}
				echo $total_answers;
			?>
			</span>
            <br />
            <span class="arial-gray">ANSWERS</span>
        </div><!--loading-textbox-->
