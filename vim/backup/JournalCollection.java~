import java.util.HashMap;
import java.util.ArrayList;

public class JournalCollection {
	private HashMap<String, Journal> journals;

	public JournalCollection() {
		journals = new HashMap<String, Journal>();
	}	

	public void addJournal(Journal journal) {
		journals.put(journal.getTitle(), journal);
	}

	public ArrayList<Journal> getJournalList(String employeeName) {
		ArrayList<Journal> journal = new ArrayList<Journal>();
//		Collection j = journals.values();		
		for(Journal j : journals.values()) {
			if(j.containsEmployee(employeeName))
				journal.add(j);
		}
		return journal;
	}
}
