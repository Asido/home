#!/bin/bash

# Disables ability to kill process by pressing ctrl+c, ctrl+d and should be able to disable ctrl+z, but it doesn't
trap '' 1 2 3 18 20
# Causes terminal not to display characters typed at the keyboard
stty -echo
echo -n "Key: "
read key_1
echo
echo -n "Again: "
read key_2
echo
key_3=
if [ "$key_1" = "$key_2" ]; then
	# Cleans the terminal window
	tput clear
	until [ "$key_3" = "$key_2" ]; do
		read key_3
	done
else
	echo "locktty: keys do not match" 1>&2
fi
# Makes back the ability to see typed characters again
stty echo
