#include <vector>
#include <iostream>
#include <cstdlib>
#include <iomanip>

using std::vector;
using std::cout;
using std::endl;
using std::setprecision;

int main() {
	vector<double> d;
	double average = 0;

	std::srand(time(0));
	for(double i = 0; i < 100; i++)
		d.push_back(std::rand());

	for(vector<double>::size_type i = 0; i < d.size(); i++)
		average += d[i];
	average /= d.size();
	cout << "Average of 100 random doubles: " << setprecision(10) << average << endl;

	return 0;
}
