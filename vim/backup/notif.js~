function show_notif(tag, text)
{
	if (typeof(tag) == "string")
		tag = $(tag);
	tag.empty().text(text);
	tag.fadeIn(800);
	$("#login-top").toggle();
}

function set_signup_form(form_id, email, zip)
{
	var form = $(form_id);
	form.find(".email").attr("value", email);
	form.find(".zip").attr("value", zip);
}

function set_login_form(form_id, username)
{
	var form = $(form_id);
	form.find(".username").attr("value", username);
}
