<?php

require_once('lib/swift_mailer/swift_required.php');

$product = $_POST['product'];
$product_url = $_POST['product_url'];
$name = $_POST['name'];
$to = $_POST['email'];
$offer = $_POST['offer'];
$quantity = $_POST['quantity'];
$status_url = $_POST['status_url'];

$message = "Hello, ".$name."!\n";
$message .= "Your offer has been registered.\n";
$message .= "Product: ".$product."\n";
$message .= "Link: ".$product_url."\n";
$message .= "Your offer: ".$offer."\n";
$message .= "Quantity: ".$quantity."\n";
$message .= "You can see the status in the following URL:\n";
$message .= $status_url;

$transport = Swift_SmtpTransport::newInstance();
$mailer = Swift_Mailer::newInstance($transport);
$msg = Swift_Message::newInstance("Your offer has been registered")
	->setFrom(array('offer@sax-ccessories.com' => "sax-ccessories"))
	->setTo(array($to => ""))
	->setBody($message);//'Here is the message itself');
$result = $mailer->send($msg);

?>
