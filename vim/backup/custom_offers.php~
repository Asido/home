<?php
// include("../inc/bootstrap.php");

if (isset($_GET['key'])) {
	$db = mysql_connect('localhost', 'brian393_admindb', 'bgs@321');
	mysql_select_db('brian393_brian0393', $db);
	$result = mysql_query("SELECT * FROM `sax_custom_offers` WHERE `unique_key` = '".$_GET['key']."'");

	if (!$result || mysql_num_rows($result) == 0) {
		echo 'You haven\'t made any offers.';
		exit;
	}

	if (mysql_num_rows($result) > 1) {
		echo 'Error. Please report it to the administrators.';
		exit;
	}

	$row = mysql_fetch_object($result);
	if ($row->status == 'Pending')
		echo 'Your offer is still pending';
	else if ($row->status == 'Accepted') {
		@session_start();
		$_SESSION['key'] = $row->unique_key;
		$_SESSION['custom_offer_key'] = $row->unique_key;
		header('Location: http://www.sax-ccessories.com/products/'.$row->product_id);
		exit;
	} else if ($row->status == 'Denied')
		echo 'We are sorry, but your offer has been denied.';
} else {
	echo 'Nothing to see for you here';
}

?>
