#!/bin/bash

dir="$1"
ordinary_count=0
directory_count=0
link_count=0

for file in $dir/*; do
	info=$(ls -dl "$file")
	if [[ "$info" = l* ]]; then
		((link_count++))
	elif [[ "$info" =~ d* ]]; then
		((directory_count++))
	elif [[ "$info" = -* ]]; then
		((ordinary_count++))
	fi
done

echo "In $1 folder is:"
echo -e "\tDirectories: $directory_count"
echo -e "\tOrdinary files: $ordinary_count"
echo -e "\tLinks: $link_count"
