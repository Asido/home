<script>
$(document).ready(function() {
	$("#mute_sound").click(function() {
		if ($("#audio").attr("muted")) {
			$("#audio").attr("muted", false);
		} else {
			$("#audio").attr("muted", true);
		}
		$("#mute_sound").toggleClass("muted");
	});
});
</script>
<audio id="audio" loop="loop" autoplay="autoplay">
	<source src="http://www.cmadesignprojects.com/euro/Sovereign.mp3" type="audio/mp3" />
</audio>
