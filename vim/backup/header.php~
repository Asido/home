<?php require_once('man_functions.php');
$menu=mainmenu();
$menu_count=count($menu);
?>
<div id="nav">
		<div class="menu">
        <ul>
        <?php for($i=0;$i<$menu_count;$i++)
		{
			?>
			
    	<li><a href="<?php echo $menu[$i]['link']; ?>" class="left_nosub"><?php echo $menu[$i]['name']; ?></a>
        
        <?php
		$submenu=submenu($menu[$i]['id']);
		$sub_count=count($submenu);
		if($menu[$i]['id']==9)
		{
			echo '<ul>';
			?>
            
            <li><a href="media.php">Media</a></li>
            <li><a href="press.php">Press</a></li>
            <li><a href="testimonials.php">Testimonials</a></li>
            <?php
		}
		if($menu[$i]['id']==9 && $sub_count==0)
		{
			echo '</ul>';
		}
		if($sub_count!=0)
		{
			echo '<ul>';
			#create loop to display sub menu
			for($j=0;$j<$sub_count;$j++)
			{
			?>
            
            	<li><a href="<?php echo $submenu[$j]['link']; ?>"><?php echo $submenu[$j]['name']; ?></a></li>
            
            <?php
			}
			echo '</ul>';
		}
		?>
        
        </li>
		<?php if($i!=$menu_count-1) { ?>
        <div class="menudivider"></div>
        <?php } ?>
        <?php
		}
		?>
    </ul>
		</div>
</div>
