#!/bin/zsh

if [ $# -eq 0 ] ; then
	echo "Usage: check_args.sh argument..." 1>&2
	exit 1
fi

# 'test' built-in with -f option checks if the argument is a normal file or a directory (false if directory)
# [] == test
if [ -f $1 ]; then
	echo "$1 is an ordinary file in the working directory"
else
	echo "$1 is NOT and ordinary file in the working directory"
fi

echo "Program is running..."
exit 0
