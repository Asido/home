#include <iostream>
#include <string>

using std::string;
using std::cout;
using std::cin;
using std::endl;

bool palindrome(String& word);

int main() {
	string word;

	do {
		cout << "Enter a word: ";
		cin >> word;
		if(palindrome(word))
			cout << "Word '" << word << "' is a palindrome." << endl;
		else
			cout << "Word '" << word << "' is NOT a palindrome." << endl;
	} while(cin);

	return 0;
}

bool palindrome(String& word) {
	return equal(word.begin(), word.end(), word.rbegin());
}
