<script type="text/javascript">
function loadcheck()
{
	if($('#tour1').val()!="")
	{
		filtervalidate();
	}
	else if($('#city1').val()!="")
	{
		filtervalidate();
	}
}
function getcity()
{
	var country = document.getElementById("country");
	 var country_id = country.value;
  		
		$.ajax({
   type: "GET",
   url: "loaddata.php",
   data: "country_id="+country_id,
   success: function(msg){
    $('#cityid').html(msg);
   }
 });
 
}
function filtervalidate(page)
{
	QS="";
	
	if($('#tour1').val()!="")
	{
		QS+="title="+$('#tour1').val();
	}
	
	if($('#city1').val()!="")
	{
		QS+="&&city="+$('#city1').val();
	}
	if($('#cityid').val()!="" && $('#cityid').val()!=0)
	{
		QS+="&&cityid="+$('#cityid').val();
	}
	if($('#country').val() !=0 && $('#country').val()!="" && $('#country').val()!=null)
	{
		QS+="&&country="+$('#country').val();
	}
	if($('#category').val()!=0 && $('#category').val()!="" &&  $('#category').val()!=null)
	{
		QS+="&&category="+$('#category').val();
	}
	if($('#language').val()!=0&& $('#language').val()!="" &&  $('#language').val()!=null)
	{
		QS+="&&language="+$('#language').val();
	}
	if($('#lessthan30').attr("checked")==true)
	{
		QS+="&&lessthan30";
	}
	if($('#30-60').attr("checked")==true)
	{
		QS+="&&30-60";
	}
	if($('#60-120').attr("checked")==true)
	{
		QS+="&&60-120";
	}
	if($('#morethan120').attr("checked")==true)
	{
		QS+="&&morethan120";
	}
	if($('#sortrating').attr("checked")==true)
	{
		QS+="&&sortby=rating "	
	}
	if($('#sortpricehigh').attr("checked")==true)
	{
		QS+="&&sortby=pricehigh "
	}
	if($('#sortpricelow').attr("checked")==true)
	{
		QS+="&&sortby=pricelow "
	}
	if($('#sortlength').attr("checked")==true)
	{
		QS+="&&sortby=length "
	}
	
	if(page!="")
	{
		QS+="&&page="+page;
	}
	else
	{
		QS+="&&page=1";
	}
	
	//document.write(QS);
	/* alert(QS); */
	$.ajax({
   type: "GET",
   url: "searchresults.php",
   data: QS,
   success: function(msg){
	   //alert("hi");
		$('#sv_result').html(msg);
   }
 });
}

function addtoCart(title,image,tour_id)
{
	jQuery.ajax({
   type: "POST",
   url: "addtocart.php",
   data: "tour_id="+tour_id,
   success: function(msg){}
	});
		document.getElementById('image1').src=image;
		document.getElementById('title').innerHTML=title;

	jQuery.facebox({div:'#box'});
	

}

function closebox1()
{
	jQuery(document).trigger('close.facebox');
}
	
</script>
