<script language="javascript">
//  Developed by Roshan Bhattarai 
//  Visit http://roshanbh.com.np for this script and more.
//  This notice MUST stay intact for legal use

$(document).ready(function()
{
	$("#update_pass").submit(function()
	{
		//remove all the class add the messagebox classes and start fading
	//	$("#msgbox").removeClass().text('Validating....').fadeIn(1000);
		//check the username exists or not from ajax
		$.post("submit_pass.php",{ old_pass:$('#old_pass').val(),new_pass:$('#new_pass').val(),confirm_pass:$('#confirm_pass').val(),rand:Math.random() } ,function(data)
        {
		  if(data=='yes') //if correct login detail
		  {
		  	$("#msgbox").fadeTo(200,0.1,function()  //start fading the messagebox
			{ 
			  //add message and change the class of the box and start fading
			  $(this).html('Password Changed').fadeTo(900,1,
              function()
			  { 
			  });
			  
			});
		  }
		  else 
		  {
		  	$("#msgbox").fadeTo(200,0.1,function() //start fading the messagebox
			{ 
			  //add message and change the class of the box and start fading
			  $(this).html('Error').fadeTo(900,1);
			});		
          }
				
        });
 		return false; //not to post the  form physically
	});
	//now call the ajax also focus move from 
});
</script>

