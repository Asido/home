        	<span class="ab16-black">GROUPS YOU BELONG TO:</span>
            <div class="group-wrapper">
            	<div id="group-table-wrap">
                	<table id="group-table">
                    	<tr id="group-th">
                        	<td width="246px" class="td-indent"><span class="a16-white">Group Name</span></td>
                            <td width="210px" class="td-center"><span class="a16-white">Members</span></td>
                            <td width="200px" class="td-center"><span class="a16-white">Questions Asked</span></td>
                        </tr>
						<?php
						$nr = 0;
						foreach ($groups as $group) {
							echo '
								<tr class="'.($nr % 2 == 0 ? "tr-even" : "tr-odd").'">
									<td class="td-indent"><span class="a14-blue">'.$group['name'].'</span></td>
									<td class="td-center"><span class="a14-gray">'.$auth->get_group_member_count($group['name']).'</span></td>
									<td class="td-center"><span class="a14-gray">'.$auth->get_group_question_count($group['name']).'</span></td>
								</tr>
							';
							$nr++;
						}
						?>
                    </table>
                
                
                
                </div>
            	
            </div><!--group-wrapper-->
			<a class="a12-black-under" href="creategrp.php">Create Your Own Group and post to the world</a>
			<br/>
			<span><a class="a12-black-under" href="addquestion.php">
				You can Create <?php echo (int)($points / 50 - $questions_created); ?> Questions
			</a></span>
