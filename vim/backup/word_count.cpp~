#include <string>
#include <iostream>

using std::string;
using std::cout;
using std::cin;
using std::endl;

int main() {
	int count = 0;
	size_t pos;
	string pattern = "and";
	string line;

	cout << "Enter some text down there" << endl;
	while(cin >> line) {
		pos = 0;
		while((pos = line.find(pattern, pos + 1)) != string::npos)
			count++;
	}

	cout << "Pattern '" << pattern << "' was found "
		<< count << " times." << endl;

	return 0;
}
