<?php
@session_start();

// if (!isset($_FILES['group-avatar-file']))
// 	exit;

require_once('config.php');

$ext = explode('.', $_FILES['group-avatar-file']['name']);
$ext = $ext[count($ext)-1];
$filename = sha1(time().$_FILES['group-avatar-file']['tmp_name']).'.'.$ext;
while (file_exists('../'.CONFIG::TMP_DIR.$filename))
	$filename = sha1(time().$_FILES['group-avatar-file']['tmp_name'].'.'.$ext);

if (!move_uploaded_file($_FILES['group-avatar-file']['tmp_name'], '../'.CONFIG::TMP_DIR.$filename)) {
	echo '{"ret" : "error moving the image"}';
	exit;
}
echo '{"ret" : "'.$filename.'"}';

exit;
?>
