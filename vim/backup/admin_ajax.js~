$(document).ready(function() {
	var content_wrap = $("#loading-wrapper");
	var ready = true;

	ajax_get_content("admin/content-1.php");

	$("#tab-dashboard").click(function() {
		switch_content($(this), "admin/content-1.php");
	});

	$("#tab-questions").click(function() {
		switch_content($(this), "admin/cmsques.php");
	});

	$("#tab-statistics").click(function() {
		switch_content($(this), "admin/content-1.php");
	});

	$("#tab-thread").click(function() {
		switch_content($(this), "admin/content-4.php");
	});		

	$("#tab-settings").click(function() {
		switch_content($(this), "admin/content-5.php");
	});

	function switch_content(tag, url)
	{
		if (ready) {
			ready = false;
			$(".navigation-button").removeClass("navigation-selected");
			tag.addClass("navigation-selected");
			ajax_get_content(url);
		}
	}	

	function ajax_get_content(url)
	{
		content_wrap.html("<img src='images/ajax_preloader.gif' width='64' height='64' class='preloader' />");
		/* TEST EXAMPLE FOR LOADING ANIMATION: REMOVE MARKED 'DELETE' LINES IN A RELEASE VERSION TO AVOID DELAYS */
		// setTimeout ( function() {	/* DELETE */
			$.get(url, function(content) {
				content_wrap.hide();
				content_wrap.html(content);
				content_wrap.fadeIn("slow");
				ready = true;
			});
		// }, 500);	/* DELETE */
	}
});
;
