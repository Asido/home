#include <iostream>
#include <string>

using std::endl;
using std::cout;
using std::cin;
using std::string;

int main() {
	string line;
	size_t longest = 0;
	size_t shortest = line.max_size();

	while(cin >> line) {
		size_t size = line.size();
		if(size > longest)
			longest = size;
		if(size < shortest)
			shortest = size;
	}

	cout << "Shortest line length: " << shortest << endl;
	cout << "Longest line length: " << longest << endl;

	return 0;
}
