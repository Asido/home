<?php
	
	@session_start ();
	require_once( '../auth/auth.php' );
	
	if ( ! $auth->logged_in() )
	{
		if ( ! $auth->cookie_log_in() ) exit;
	}
	
	require_once( '../config.php' );
	require_once( '../notification.php' );
	
	
	$logged		= $auth->logged_in();
	$user_id	= $logged['id'];
	$notif		= new notification ();
	
	if ( isset ( $_POST['check_notif'] ) )
	{
		$notif->update( $_POST['check_notif'], false, false, 0 );
		exit;
	}
	
	if ( isset( $_POST['check_accept'] ) )
	{
		$notif->updateParams( 
					$_POST['check_accept'], 
					array(
						'accepted'	=> 1
					)
				);
	}
	
	//printing news
	$news		= $notif->get( $user_id );
	echo
		'<div class="notification-header"></div>' . 
		'<div class="notification-container">';
	foreach ( $news as $new )
	{
		echo $new;
	}
	echo
		'</div>';
?>
