if(isset($_POST['UpdateShoppingCart']))
{
	
	$valijhihj=mysql_query("select * from ".TB_CART." where reference='".$_SESSION['CartReference']."'");
	while($qtyid=mysql_fetch_array($valijhihj))
	{
		
		$val="qty".$qtyid['id'];
		$grandamt=($qtyid['price']*$_POST[$val]);
		
		//print "update orders set qty='".$_POST[$val]."',grand_total='".$grandamt."' where id='".$qtyid['id']."'";
		if($_POST[$val]!="0" && $_POST[$val]!="")
		{
		$ssg="update ".TB_CART." set quantity='".$_POST[$val]."',totalamount='".$grandamt."' where id='".$qtyid['id']."'";
		}
		else
		{
		$ssg="delete from ".TB_CART." where id='".$qtyid['id']."'";	
		}
		$update=$class->Q($ssg);		
	}
}
