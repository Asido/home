                        <script type="text/javascript" language="javascript">
						function addCommas(nStr)
						{
							nStr += '';
							x = nStr.split('.');
							x1 = x[0];
							x2 = x.length > 1 ? '.' + x[1] : '';
							var rgx = /(\d+)(\d{3})/;
							while (rgx.test(x1)) {
								x1 = x1.replace(rgx, '$1' + ',' + '$2');
							}
							return x1 + x2;
						}

                        function totval(str,qry)
						{
							var same=0;
							var tots=(parseFloat(str)+parseFloat(qry));
							var tt=(tots.toFixed(2));
							document.getElementById('totalamount').innerHTML='$'+addCommas(tt);
							var sps=str.split(',');
							document.getElementById('spp').innerHTML='$'+sps[0];
							if(str=="0")
							{
								document.getElementById('spp').innerHTML='';
							}
						}
                        </script>
