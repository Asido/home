	<script>
		$(document).ready (function() {
			var popup = $("#popup-wrapper");
			var left = ($(window).width() - parseInt(popup.css("width"))) / 2;
			var top = ($(window).height() - parseInt(popup.css("height"))) / 2;
			popup.css("left", left+"px");
			popup.css("top", top+"px");
		});
	</script>
