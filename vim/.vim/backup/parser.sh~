#!/bin/bash

CUSTOM_IFS=false

if [[ $# < 1 || $# > 2 ]]; then
	echo "Usage: $(basename $0) [-s'separate_character'] text" 1>&2
	exit 1
fi

while getopts s: arg; do
	case $arg in
		s)
			IFS="$OPTARG"
			CUSTOM_IFS=true
			;;
	esac
done

if [[ "$CUSTOM_IFS" = "false" ]]; then
	IFS=":"
fi

arg=("$@")
for line in ${arg[@]}; do
	echo "$line"
done
