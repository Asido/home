#!/usr/bin/perl -w

@colors = ("red", "Orange", "yellow", "green", "blue", "indigo", "Violet");

print "@colors\n";

@sorted_colors = sort {$a cmp $b} @colors;
print "@sorted_colors\n";

@sorted_colors = sort @colors;
print "@sorted_colors\n";

@sorted_colors = sort {$b cmp $a} @colors;
print "@sorted_colors\n";

@sorted_colors = sort {lc($a) <=> lc($b)} @colors;
print "@sorted_colors\n";
