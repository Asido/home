	$(document).ready(function() {
			
			$('#si-inner2id').click(function(e){
			e.preventDefault();
			//$('#si-maindiv').html($('#content-tour').html);
			$('#content-tour').show();
			$('#si-slide1').hide();
			$('#si-inner2id').removeClass('si-inner2').addClass('si-inner2clicked');
			$('#si-inner3id').removeClass('si-inner3clicked').addClass('si-inner3');
			});
			
			$('#si-inner3id').click(function(e){//alert("hi");
			e.preventDefault();
			//$('#si-maindiv').html($('#si-slide1').html);
			$('#content-tour').hide();
			$('#si-slide1').show();
			$('#si-inner3id').removeClass('si-inner3').addClass('si-inner3clicked');
			$('#si-inner2id').removeClass('si-inner2clicked').addClass('si-inner2');
			});
	});
	</script>
