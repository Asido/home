-- USE likemelikeu;

-- Table which is going to store all the users
CREATE TABLE users
(
	username	varchar(50)	not null,
	password	char(40)	not null,
	zip			varchar(20),
	PRIMARY KEY (username)
);

-- Create a default user
INSERT INTO users VALUES
('likemelikeu', SHA1('likemelikeu'), NULL);
