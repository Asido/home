#!/bin/bash
# journal: add journal entries to a file
# $(pwd)/journal-file

file=$(pwd)/journal-file

if [ -e $file ]; then
	if [ ! -r $file -a ! -w $file ]; then
		echo "$(basename $0): You need to have read and write permissions to $file" 1>&2
		exit 1
	fi
fi

date >> $file
echo -n "Enter name of person or group: "
read name
echo "$name" >> $file
echo >> $file
cat >> $file
echo "---------------------------------------------------" >> $file
echo >> $file
