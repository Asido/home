function getDownloadedtour($user_id)
{
$p = "SELECT * FROM download WHERE userid='$user_id' AND down_count!=0";
$q = mysql_query($p);
	if(@mysql_num_rows($q)>0)
	{
		
		return $q;
	}
	else
	{
		return false;	
	}
}

