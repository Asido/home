<script>
function changePage(pageno)
{
	result_top=parseInt($('.result_reel').css('top'));
	//console.log(result_top);
	pageno = pageno-1;
	//console.log(pageno);
	new_top = pageno*540;
	//console.log(new_top);
	new_top = -new_top+'px';
	//console.log(new_top);
	$('.result_reel').animate({'top':new_top},1000);
	//$('.result_reel').css('top',new_top);
	return false;
	
}
</script>

