<?php 
$setting=$class->F($class->query(TB_SETTINGS));
if(isset($_POST['UpdateSettings']))
{
	$rand=$class->createRandomPassword();
	
	if($_FILES['site_logo']['name'] != "") 
	{
		@unlink("property/".$setting['site_logo']);
	$imgsourcename = "logo_".$rand."_".$_FILES['site_logo']['name'];
	move_uploaded_file($_FILES['site_logo']['tmp_name'], "property/".$imgsourcename);
	}
	
	if($_FILES['site_header']['name'] != "") 
	{
		@unlink("property/".$setting['site_header']);
	$imgsourceheader = "header_".$rand."_".$_FILES['site_header']['name'];
	move_uploaded_file($_FILES['site_header']['tmp_name'], "property/".$imgsourceheader);
	}
	
	$checkst=$class->C($class->query(TB_SETTINGS));
	if($checkst>0)
	{
		
		if($imgsourcename!=""){$exe1=$class->Q("UPDATE ".TB_SETTINGS." SET site_logo='".$imgsourcename."'");}	
		if($imgsourceheader!=""){$exe2=$class->Q("UPDATE ".TB_SETTINGS." SET site_header='".$imgsourceheader."'");}	
		$add=$class->Q("UPDATE ".TB_SETTINGS." SET db_username='".$_POST['authorizw_loginid']."',db_password='".$_POST['authorizw_tran_key']."'");
	}
	else
	{
		$add=$class->Q("INSERT INTO ".TB_SETTINGS." SET site_logo='".$imgsourcename."',site_header='".$imgsourceheader."',db_username='".$_POST['authorizw_loginid']."',db_password='".$_POST['authorizw_tran_key']."'");
	}
	
	$fh= fopen("includes/config.php", "w");
	$exclude_arr = array("phpsessid", "submit", "submit_action");	
	$towrite_str = "<?php\n\n";
	$towrite_str .= "";	
	foreach ($_REQUEST as $key => $value)
	{
		if(!in_array(strtolower($key), $exclude_arr))
		{
			$towrite_str .= "\$db['default']['$key'] = \"" . trim($value) . "\";\n\n";
		}
	}
	$towrite_str .= "require_once('connectionsettings.php');";
	$towrite_str .= "\n\n?>";	
	if(fwrite($fh, $towrite_str))
	{
	fclose($fh);
	echo "<script>window.location='home.php?action=settings&succ'</script>";
	}
	else
	{
	fclose($fh);
	echo "<script>window.location='home.php?action=settings&err'</script>";
	}
}
