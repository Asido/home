<?php 

function export_mysql_csv($filename = 'export.csv')
{
	
    mysql_connect("localhost","brian393_admindb","bgs@321");
    mysql_select_db("brian393_brian0393") or die();







if(isset($_GET['orders']))
{

	$sql_query="SELECT * FROM sax_cart where status!='0'";

	if($_GET['type']=="d")
	{
		$sql_query.=" and adddate>='".$_GET['f']."' and adddate<='".$_GET['t']."' ORDER BY id ASC";
	}
	else if($_GET['type']=="c")
	{
		$sql_query.=" and price>='".$_GET['f']."' and price<='".$_GET['t']."' ORDER BY id ASC";
	}
	else if($_GET['type']=="s")
	{
		$sql_query.=" and status='".$_GET['f']."' ORDER BY id ASC";
	}

	else
	{

	$sql_query="SELECT * FROM sax_cart where status!='0' order by id DESC";
	}


}
else
{
$sql_query="select * from sax_product ORDER BY id ASC";
}



$csv_output = "Item Id; ";
$csv_output .= "Category Id; ";
$csv_output .= "Sub Category Id; ";
$csv_output .= "Product Name; ";
$csv_output .= "Title; ";
$csv_output .= "Title 2; ";
$csv_output .= "Cost; ";
$csv_output .= "List Price; ";
$csv_output .= "List Price Status; ";

$csv_output .= "Dealer Cost; ";
$csv_output .= "Quantity; ";
$csv_output .= "Quantity Status; ";
$csv_output .= "Availability; ";
$csv_output .= "Reference; ";
$csv_output .= "Post Date; ";
$csv_output .= "Last Update; ";




$csv_output .= "\r\n";


$values = mysql_query($sql_query);
while ($rowr = mysql_fetch_array($values, MYSQL_ASSOC) ) {

$csv_output .= $rowr['id']."; ";
$csv_output .= $rowr['categoryid']."; ";
$csv_output .= $rowr['subcategoryid']."; ";
$csv_output .= $rowr['productname']."; ";
$csv_output .= $rowr['title1']."; ";
$csv_output .= $rowr['title2']."; ";
$csv_output .= $rowr['cost']."; ";
$csv_output .= $rowr['listprice']."; ";
$csv_output .= $rowr['listprice_status']."; ";
$csv_output .= $rowr['dealercost']."; ";
$csv_output .= $rowr['quantity']."; ";
$csv_output .= $rowr['qty_status']."; ";
$csv_output .= $rowr['availability']."; ";
$csv_output .= $rowr['reference']."; ";
$csv_output .= $rowr['postdate']."; ";
$csv_output .= $rowr['lastupdate']."; ";


$csv_output .= "\r\n";
}





$filename = "products_".date("Y-m-d_H-i",time());
header("Content-type: application/vnd.ms-excel");
header("Content-disposition: csv" . date("Y-m-d") . ".csv");
header( "Content-disposition: filename=".$filename.".csv");
print $csv_output;
exit;




}

export_mysql_csv();


?>
