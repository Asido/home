<?php
session_start();
require_once("funcsv.php");
connect();
if(isset($_GET['language']))
{
	
	echo"<option value='0'>LANGUAGE</option>";
	$query = "SELECT * FROM language";
	//echo $query;
	$r = mysql_query($query);
	if(mysql_num_rows($r)>0)
	{
		while($onerow=mysql_fetch_array($r))
		{
			echo "<option value=".$onerow['language_id'].">".$onerow['language']."</option>";
		}
	}
}
else if(isset($_GET['country']))
{
	
		echo"<option value='0'>COUNTRY</option>";
	$query = "SELECT * FROM country";
	//echo $query;
	$r = mysql_query($query);
	if(mysql_num_rows($r)>0)
	{
		while($onerow=mysql_fetch_array($r))
		{
			echo "<option value=".$onerow['country_id'].">".$onerow['country_name']."</option>";
		}
	}
}

else if(isset($_GET['categories']))
{
	
	echo"<option value='0'>CATEGORIES<option>";
	$query = "SELECT * FROM category";
	//echo $query;
	$r = mysql_query($query);
	if(mysql_num_rows($r)>0)
	{
		while($onerow=mysql_fetch_array($r))
		{
			
			echo "<option value=".$onerow['category_id'].">".$onerow['category']."</option>";
		}
	}
}
else if(isset($_GET['country_id']))
{
	
	echo"<option value='0'>CITY</option>";
	$query = "SELECT * FROM city WHERE country_id ='".$_GET['country_id']."'";
	//echo $query;
	$r = mysql_query($query);
	if(mysql_num_rows($r)>0)
	{
		while($onerow=mysql_fetch_array($r))
		{
			echo "<option value=".$onerow['city_name'].">".$onerow['city_name']."</option>";
		}
	}
}
else if(isset($_GET['statew']))
{
	
	//echo"<option value='0'>STATE</option>";
	$query = "SELECT * FROM state WHERE country_id ='".$_GET['statew']."'";
	//echo $query;
	$r = mysql_query($query);
	if(mysql_num_rows($r)>0)
	{
		while($onerow=mysql_fetch_array($r))
		{
			echo "<option value=".$onerow['state_id'].">".$onerow['state_name']."</option>";
		}
	}
}
else
{
	header("location:index.php");
}

?>