<?php

require_once('php/auth.php');

$logged = $auth->logged_in();

if (!$logged) {
	if (!$auth->cookie_login()) {
		header('Location: login.php');
		exit;
	}
}

$points = $auth->get_points($_SESSION['username']);
if ($points < 50) {
	header('Location: category.php');
	exit;
}

