<h3 style="margin: 0px;">POINTS: <?php echo $points; ?></h3>

<?php
if ($points >= 50)
	$questions_created = 0;

	$result = $db->query("SELECT COUNT(`id`) AS `count` FROM `profile_questions` WHERE `created_by` = '".$_SESSION['username']."'");
	$questions_created = $questions_created + mysql_fetch_object($result)->count;

	$result = $db->query("SELECT COUNT(`id`) AS `count` FROM `top10_questions` WHERE `created_by` = '".$_SESSION['username']."'");
	$questions_created = $questions_created + mysql_fetch_object($result)->count;

	$result = $db->query("SELECT COUNT(`id`) AS `count` FROM `top100_questions` WHERE `created_by` = '".$_SESSION['username']."'");
	$questions_created = $questions_created + mysql_fetch_object($result)->count;

	$result = $db->query("SELECT COUNT(`id`) AS `count` FROM `sports_questions` WHERE `created_by` = '".$_SESSION['username']."'");
	$questions_created = $questions_created + mysql_fetch_object($result)->count;

	$result = $db->query("SELECT COUNT(`id`) AS `count` FROM `music_questions` WHERE `created_by` = '".$_SESSION['username']."'");
	$questions_created = $questions_created + mysql_fetch_object($result)->count;

	$result = $db->query("SELECT COUNT(`id`) AS `count` FROM `politics_questions` WHERE `created_by` = '".$_SESSION['username']."'");
	$questions_created = $questions_created + mysql_fetch_object($result)->count;

	if ($points >= ($questions_created * 50))
		echo "<h3 style='margin: 0px;'><a href='addquestion.php'>You can create ".((int)($points / 50 - $questions_created))." questions.</a></h3>";
?>


