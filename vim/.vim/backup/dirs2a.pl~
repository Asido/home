#!/usr/bin/perl -w

$folder = shift || $ENV{"PWD"};
print "The provided directory contains these folders:\n";

opendir(my $dir, $folder) || die("Could not open directory: $folder\n");
while(my $entry = readdir($dir)) {
	if(-d "$folder/$entry") {
		print $entry, "\n" unless($entry eq '.' || $entry eq '..' || $entry =~ /\.*/);
	}
}
closedir($dir);
print "\n";
