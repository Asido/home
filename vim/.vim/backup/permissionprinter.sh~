#!/bin/bash

if [ $# -ne 2 ]; then
	echo "Usage: $(basename $0) file1 file2" 1>&2
	exit 1
fi

if [ ! -e "$1" -o ! -e "$2" ]; then
	echo "$(basename $0): Files provided as an arguments have to exist" 1>&2
	exit 1
fi

file1_permission=$(ls -l "$1" | cut -d ' ' -f1)
file2_permission=$(ls -l "$2" | cut -d ' ' -f1)

if [[ "$file1_permission" = "$file2_permission" ]]; then
	echo "$file1_permission"
else
	echo "$file1_permission \t $1"
	echo "$file2_permission \t $2"
fi
