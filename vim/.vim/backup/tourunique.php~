function getVideo($tour_id)
{
	 $v = "SELECT video_id FROM tour_details WHERE tour_id='$tour_id'";
	$sql = mysql_query($v);
	if(mysql_num_rows($sql)>0)
	{
		 $onerow=mysql_fetch_array($sql);
		$video = $onerow['video_id'];	
		 $s = "SELECT intro_path FROM videos WHERE video_id='$video'";	
		$sql1 = mysql_query($s);
		if(mysql_num_rows($sql1)>0)
			{
				$onerow1=mysql_fetch_array($sql1);
				$video_name = $onerow1['intro_path'];	
				return $video_name;
			}
			else
			{
			return false;	
			}
	
	}
	else
	{
		return false;
	}
	
}
