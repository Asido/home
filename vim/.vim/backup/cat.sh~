#!/bin/bash

if [ $# -eq 0 ]; then
	echo "Usage: cat.sh [-v] argument" 1>&2
	exit 1
fi

if [ "$1" = "-v" ]; then
	shift 				# after checking 'shift' built-in removes the argument if it exists in order not to pass it to 'less' command with $@
	less -- "$@" 		# '--' prevents errors if passed filename starts with hyphen, '-'
else
	cat -- "$*"
fi
