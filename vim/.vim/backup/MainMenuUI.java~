package TUI;

import java.util.Scanner;

import rhinestone.Control.MainMenuController;

public class MainMenuUI {
	private MainMenuController controller;

	public MainMenuUI(MainMenuController controller) {
		this.controller = controller;
	}

	public void startMenu() {
		boolean finished = false;
		while(!finished) {
			printMenu();
			int choice = promptInput();
			switch(choice) {
				case 1:
					controller.moveToCheckout();
					break;
				case 2:
					controller.moveToCRUDProducts();
					break;
				case 3:
					controller.moveToLeasing();
					break;
				case 4:
					controller.moveToStatistics();
					break;
				case 5:
					controller.moveToOrders();
					break;
				case 6:
					finished = true;
					break;
				default:
					System.err.println("MainMenu default switch");
					break;
			}
		}
	}

	private void printMenu() {
		System.out.println(" ----- MAIN MENU ----- ");
		System.out.println("\t(-1-) Checkout products");
		System.out.println("\t(-2-) CRUD products");
		System.out.println("\t(-3-) Leasing services");
		System.out.println("\t(-4-) Statistics");
		System.out.println("\t(-5-) Orders");
		System.out.println("\t(-6-) Exit");
	}

	private int promptInput() {
		System.out.print("Your choice: ");
		int choice = new Scanner(System.in).nextInt();
		return choice;
	}
}
